<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://gastronomicainternacional.com/wp-content/uploads/2018/02/receta-mojito-con-mezcal-1.jpg);">
  <div class="container">
    <h1>My cocktails</h1>
    <%= link_to 'Add Cocktail', new_cocktail_path, class: "btn btn-outline-success" %>
  </div>
</div>

<%= simple_form_for :search, url: cocktails_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="row row-cols-1 row-cols-md-3 justify-content-center">
  <% @cocktails.each do |cocktail| %>
    <div class="col m-4 card-category custom-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @article.photo.key %>)">
      <div>
        <div class="card-body">
          <h5 class="card-title text-light text-center"><%= cocktail.name %></h5>
          <p class="card-text text-center">
          <%= link_to 'Show More', cocktail_path(cocktail), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_cocktail_path(cocktail), class: "btn btn-warning" %>
          <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
